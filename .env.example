# CallingTrack Environment Configuration
# Copy this file to .env and update the values as needed

# ==============================
# DJANGO CORE SETTINGS
# ==============================

# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new secret key: https://djecrety.ir/ or use Django's get_random_secret_key()
SECRET_KEY=your-secret-key-here-replace-with-actual-secret-key

# SECURITY WARNING: don't run with debug turned on in production!
# Set to True for development, False for production
DEBUG=True

# Comma-separated list of allowed hosts
# Development: localhost,127.0.0.1
# Production: your-domain.com,www.your-domain.com,your-app-name.herokuapp.com
ALLOWED_HOSTS=localhost,127.0.0.1,your-app-name.herokuapp.com

# ==============================
# DATABASE CONFIGURATION
# ==============================

# Choose ONE of the following database configurations:

# Option 1: SQLite (recommended for development)
DATABASE_URL=sqlite:///db.sqlite3

# Option 2: PostgreSQL (recommended for production)
# DATABASE_URL=postgres://username:password@localhost:5432/callingtrack

# Option 3: Heroku PostgreSQL (automatically provided by Heroku)
# DATABASE_URL=postgres://user:pass@host:port/dbname

# ==============================
# OPTIONAL SETTINGS
# ==============================

# Email Configuration (for password reset, notifications, etc.)
# Uncomment and configure these when email functionality is needed
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-gmail-app-password
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=CallingTrack <noreply@yourdomain.com>

# Internationalization
# TIME_ZONE=America/Denver
# LANGUAGE_CODE=en-us

# Static Files (for production deployment)
# These are typically set by your hosting provider
# STATIC_URL=/static/
# STATIC_ROOT=staticfiles

# Media Files (for file uploads)
# MEDIA_URL=/media/
# MEDIA_ROOT=media
